<%= simple_form_for [@cocktail, @dose] do |f| %>

  <%= f.error_notification %>

  <%= f.input :description %>

  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <!--
  OR different syntax with more customization options (note: slign strong params):
  <%= f.association :ingredient, collection: Ingredient.all, value_method: :id, label_method: :name %>
  -->

  <!-- image upload with attachinary -->
  <%= f.input :image, as: :attachinary %>

  <%= f.submit %>

<% end %>

<%= link_to "Cancel", cocktail_path(@cocktail) %>
