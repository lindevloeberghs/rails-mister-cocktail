<h2><%= @cocktail.name %></h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to "remove", dose_path(dose, cocktail_id: @cocktail), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
